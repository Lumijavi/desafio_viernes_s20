<h1>Usuarios</h1>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>User</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <%= user.admin? ? image_tag('https://image.flaticon.com/icons/svg/78/78948.svg', :class => "img-fluid roleimg") : image_tag('https://image.flaticon.com/icons/svg/33/33308.svg', :class => "img-fluid roleimg") %>
          <%= user.role %>
        </td>

        <td>
          <% if user != current_user %>
          <%= link_to "Change Role", role_update_path(user), data: {confirm: 'Are you sure?'}, class: 'btn btn-success'%>
          <% end %>
        </td>

        <td>
          <% if user != current_user %>
          <%= link_to "Delete User!", user_delete_path(user), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-warning'%>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
